[general]
status_path = "~/.local/share/vdirsyncer/status/"

[pair my_contacts]
a = "my_contacts_local"
b = "my_contacts_remote"
collections = ["from a", "from b"]

[storage my_contacts_local]
type = "filesystem"
path = "~/.local/share/vdirsyncer/contacts/"
fileext = ".vcf"

[storage my_contacts_remote]
type = "carddav"
url = "https://nextcloud.codeclick.co.uk/remote.php/dav/addressbooks/users/tom/contacts/"
username = "tom"
password.fetch = ["command", "printenv", "CONTACTS_PASS"]
